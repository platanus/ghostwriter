{{!< default}}

<div class="container">
    {{#post}}
        <article class="post-container {{post_class}}">
            <header class="post-header">
                <h1 class="post-title">{{title}}</h1>

                <p class="post-date"><time datetime="{{published_at}}">Published {{date format="MMMM Do YYYY"}}</time></p>
            </header>

            <div class="post-content">
                {{{content}}}

                {{#if tags}}
                    <p class="post-tags"><span>Tagged:</span> {{tags}}</p>
                {{/if}}
            </div>

            {{!-- ghoster --}}
            <div class='ghoster'>
                <div class='ghoster-image'>
                    <img src="{{asset "images/ghost-small.png"}}">
                </div>
                <div class='ghoster-aside'>
                    <h2>Ghoster Rules</h2>
                    <p>
                        This blog is hosted by Ghoster.io, a fantastic way to host your blog.
                        <a href="http://ghoster.io" target="_blank">Ghoster.io</a>
                    </p>
                </div>
            </div>
            {{!-- ghoster --}}
        </article>
    {{/post}}
</div>
